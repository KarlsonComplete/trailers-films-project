
    {% for film in films %}
        <div class="col">
            <div class="card shadow-sm">
                <img class="bd-placeholder-img card-img-top" height="300px"
                     src="/public/uploads/images/{{ film.pathPhoto }}" alt="">
                <div class="card-body">
                    <p class="card-text">{% set text = film.descriptionFilm |split(' ') %}
                        {% if text|length > 10 %}
                            {% for t in text|slice(0, 15) %}
                                {{ t }}
                            {% endfor %}
                        {% else %}
                            {{ text|join(' ') }}
                        {% endif %}</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                            <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                        </div>
                        <small class="text-body-secondary">9 mins</small>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
